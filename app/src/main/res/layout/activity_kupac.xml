<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".KupacActivity"
    android:background="@drawable/background">


    <Button
        android:id="@+id/profile"
        android:layout_width="183dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="520dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:text="@string/profil"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@android:color/holo_blue_bright" />

    <Button
        android:id="@+id/korpa"
        android:layout_width="183dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="420dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:text="korpa"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@android:color/holo_blue_bright" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="54dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:src="@drawable/logout" />

    <ImageView
        android:id="@+id/panel"
        android:layout_width="306dp"
        android:layout_height="441dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0dp"
        android:rotation="90"
        android:src="@drawable/panel" />

    <ImageView
        android:id="@+id/left_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="204dp"
        android:layout_marginRight="204dp"
        android:layout_marginBottom="185dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:src="@drawable/left" />

    <ImageView
        android:id="@+id/right_button"
        android:layout_width="66dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="186dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:src="@drawable/right" />

    <ImageView
        android:id="@+id/proizvod"
        android:layout_width="93dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:layout_marginBottom="97dp"
        android:layout_toStartOf="@+id/name"
        android:layout_toLeftOf="@+id/name"
        android:src="@drawable/lipov" />

    <Button
        android:id="@+id/dodaj"
        android:layout_width="83dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="65dp"
        android:text="dodaj"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="@android:color/black" />



    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="278dp"
        android:layout_height="266dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="233dp"
        android:background="@android:color/darker_gray"
        android:stretchColumns="1"
        android:visibility="invisible">

        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="Korisnicko ime" />

            <EditText
                android:gravity="right"
                android:padding="4dip"
                android:text="kupac" />
        </TableRow>
        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="Ime" />
            <EditText
                android:gravity="right"
                android:padding="4dip"
                android:text="Djordje" />
        </TableRow>
        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="Prezime" />
            <EditText
                android:layout_width="74dp"
                android:gravity="right"
                android:padding="4dip"
                android:text="Stepanovic" />
        </TableRow>
        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="broj" />
            <EditText
                android:gravity="right"
                android:padding="4dip"
                android:text="0652370137" />
        </TableRow>
        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="Adresa" />
            <EditText
                android:gravity="right"
                android:padding="4dip"
                android:text="Blagoja Jovovica" />
        </TableRow>
        <TableRow>
            <TextView
                android:padding="4dip"
                android:text="Password" />
            <EditText
                android:inputType="textPassword"
                android:gravity="right"
                android:padding="4dip"
                android:text="kupac123" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/potvrda"
                android:layout_width="139dp"
                android:layout_height="56dp"
                android:layout_marginBottom="520dp"
                android:text="Potvrda"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@android:color/holo_blue_bright" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/odutani"
        android:layout_width="83dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="427dp"
        android:text="odustani"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:backgroundTint="@android:color/holo_red_dark"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/naziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="275dp"
        android:textColor="@color/black"
        android:text="DAAAA"
        android:visibility="visible"
        />
    <Button
        android:id="@+id/opis"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="65dp"
        android:text="opis"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:backgroundTint="@android:color/black" />



</RelativeLayout>